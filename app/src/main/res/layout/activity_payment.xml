<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_bold"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Payment Method:"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/radiogroup"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            android:text="Cash"
            android:id="@+id/cash_radiobtn"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/black"
            android:checked="true"
            android:textSize="@dimen/_15ssp"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:text="Card"
            android:id="@+id/card_radiobtn"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:layout_height="wrap_content">
        </RadioButton>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_cash"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:text="Enter Cash Amount:"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Enter the cash amount"
            android:inputType="number"
            android:id="@+id/user_amount_edtxt"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_rounded"
            android:backgroundTint="#f5aa42"
            android:fontFamily="@font/gilroy_bold"
            android:text="Clear Btn"
            android:id="@+id/clear_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:text="Change:"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:padding="10dp"
            android:id="@+id/change_txt"
            android:text="0.0"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_rounded"
        android:backgroundTint="#f5aa42"
        android:fontFamily="@font/gilroy_bold"
        android:text="Save Order"
        android:id="@+id/saveorder_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"></TextView>



</LinearLayout>